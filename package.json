{
  "name": "turbofan-js",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean build:js build:jsbundle",
    "build:js": "npx esbuild ./src/js/signup.js ./src/js/confirm.js ./src/css/style.css --bundle --minify --splitting --outdir=dist --format=esm --target=es2017",
    "build:jsbundle": "npx esbuild ./src/js/bundle.js --bundle --minify --outfile=dist/js/turbofan.bundle.js --format=esm --target=es2020",
    "clean": "rimraf ./dist",
    "dev": "npm-run-all clean --parallel dev:js",
    "dev:js": "npx esbuild ./src/js/signup.js ./src/js/confirm.js ./src/css/style.css --bundle --sourcemap --watch --splitting --outdir=dist --format=esm --target=es2017"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.8",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  }
}
